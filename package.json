{
  "name": "api-gateway",
  "version": "1.0.0",
  "description": "This project will act as api gateway for other microservices",
  "main": "app.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "nodemon src/app.ts",
    "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
    "style:fix": "npm run prettier:fix && npm run prettier:check && npm run lint:fix",
    "style:check": "npm run prettier:check && npm run lint",
    "lint": "eslint .",
    "lint-check": "npx eslint src/**/*.ts && echo 'Lint complete.'",
    "lint:fix": "npx eslint --fix src/ && echo 'Lint complete.'",
    "prettier:fix": "prettier --write src/",
    "prettier:check": "prettier --check src/",
    "husky": "husky init",
    "prepare": "husky"
  },
  "author": "Bishal Rayamajhi",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.12.0",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/lodash": "^4.17.13",
    "@types/node": "^22.7.5",
    "@types/nodemailer": "^6.4.17",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.11.0",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "typescript-eslint": "^8.8.1"
  },
  "dependencies": {
    "@aws-sdk/client-ses": "^3.716.0",
    "@aws-sdk/credential-provider-node": "^3.716.0",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.5",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.1",
    "handlebars": "^4.7.8",
    "helmet": "^8.0.0",
    "husky": "^9.1.6",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mongoose": "^8.9.2",
    "nodemailer": "^6.9.16",
    "typescript": "^5.4.5",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.24.1",
    "zod-validation-error": "^3.4.0"
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "prettier --write --max-warnings=0",
      "prettier --check --max-warnings=0",
      "eslint --fix --max-warnings=0"
    ]
  }
}
